# Firebase Configuration (Server-side)
FIREBASE_API_KEY=your_firebase_api_key_here
FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
FIREBASE_APP_ID=your_app_id

# Google AI (Server-side)
GEMINI_API_KEY=your_gemini_api_key_here

# Google Translate API
GOOGLE_TRANSLATE_API_KEY=your_google_translate_api_key_here

# YouTube Data API v3 (Server-side)
YOUTUBE_API_KEY=your_youtube_api_key_here

# Amazon SES Configuration (Server-side)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
SES_FROM_EMAIL=noreply@khanakyabanau.in

# Cron Security
CRON_SECRET=your_secure_random_string_here

# JWT Secret (for unsubscribe tokens)
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# App URL (for email links)
NEXT_PUBLIC_APP_URL=https://www.khanakyabanau.in
# Google Analytics
GA_MEASUREMENT_ID=your_ga_measurement_id_here

# Mixpanel Analytics
MIXPANEL_TOKEN=your_mixpanel_token_here

# Guest User Limits
GUEST_AI_LIMIT=3
GUEST_SHOPPING_LIST_LIMIT=3

# Analytics Control
# Set to 'true' to enable analytics (disabled by default for security)
ANALYTICS_ENABLED=false

# Meal Images Base URL
# Base URL for meal images (e.g., https://your-cdn.com/images/)
MEAL_IMAGES_BASE_URL=https://example.com/images/

# Real-time Image Mapping API (Server-side)
# Lambda URL for fetching meal images in real-time (used by internal proxy)
IMAGE_MAPPING_LAMBDA_URL=https://example.com/

# Amazon Associate Tag (Client-side)
# Used for Amazon Fresh shopping list integration
NEXT_PUBLIC_AMAZON_ASSOCIATE_TAG=khanakyabanau-21

# Other environment variables can be added here
